<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucc.cs3318assignment.AssignmentController">
    <padding>
        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
    </padding>

    <Label fx:id="emailLabel" />
    <Text text="Email Address" />
    <TextField fx:id="emailAddress" />

    <Label fx:id="passwordLabel" />
    <Text text="Password" />
    <TextField fx:id="password" />

    <Label fx:id="submitText"/>
    <Button text="Submit" onAction="#onSubmitButtonClick"/>
</VBox>
